{
  "name": "subly",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "pnpm --filter subly-frontend dev",
    "build": "pnpm install && pnpm --filter subly-frontend build",
    "build:all": "pnpm install && pnpm --filter subly-frontend build && pnpm --filter subly-worker install",
    "deploy": "pnpm run build:all && pnpm --filter subly-worker deploy",
    "preview": "pnpm --filter subly-frontend preview",
    "check": "pnpm -r check",
    "format": "pnpm -r format"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "typescript": "^5.9.3"
  }
}
