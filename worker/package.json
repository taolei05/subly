{
    "name": "subly-worker",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "wrangler dev --local",
        "deploy": "wrangler deploy && pnpm run db:init:remote",
        "db:init": "wrangler d1 execute subly --local --file=./schema.sql --yes",
        "db:init:remote": "wrangler d1 execute subly --remote --file=./schema.sql --yes"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20251205.0",
        "wrangler": "^3.114.15"
    }
}