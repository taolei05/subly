{
  "name": "subly-worker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "pnpm install && pnpm run db:init:remote",
    "db:init": "wrangler d1 execute subly --local --file=./schema.sql --yes",
    "db:init:remote": "wrangler d1 execute subly --remote --file=./schema.sql --yes",
    "test": "vitest --run"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251205.0",
    "fast-check": "^4.4.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.15",
    "wrangler": "^4.53.0"
  }
}
